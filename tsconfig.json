{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["node"],
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "esModuleInterop": true
  },
  "include": ["src/*.ts", "src/types/*.d.ts", "src/types/customTypes.ts"],
  "exclude": ["node_modules"]
}